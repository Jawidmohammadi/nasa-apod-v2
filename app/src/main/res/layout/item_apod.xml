<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/main_padding"
  xmlns:app="http://schemas.android.com/apk/res-auto">


  <ImageView
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:id="@+id/thumbnail"
    android:layout_width="@dimen/image_view_width"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/title"
    app:layout_constraintHorizontal_weight="3"
    android:layout_marginEnd="@dimen/image_view_margin_end"/>

    <TextView
      android:id="@+id/title"
      android:layout_width="@dimen/title_text_view_width"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toEndOf="@id/thumbnail"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/access"
      app:layout_constraintEnd_toStartOf="@+id/date"
      app:layout_constraintHorizontal_weight="4"
      android:layout_marginEnd="@dimen/title_text_view_margin_end"
      android:layout_marginBottom="@dimen/title_text_view_margin_bottom"
      app:layout_constraintVertical_chainStyle="packed"/>

  <TextView
    android:id="@+id/date"
    android:layout_width="@dimen/date_text_view_width"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/title"
    app:layout_constraintBaseline_toBaselineOf="@+id/title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="3"/>

  <TextView
    android:id="@+id/access"
    android:layout_width="@dimen/access_text_view_width"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintStart_toStartOf="@+id/title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textAlignment="viewStart"/>



</androidx.constraintlayout.widget.ConstraintLayout>